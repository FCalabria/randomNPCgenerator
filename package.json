{
    "name": "genericNPC",
    "version": "1.3.1",
    "author": "pcalabria@gmail.com",
    "scripts": {
        "start": "npm run ionic:serve",
        "clean": "ionic-app-scripts clean",
        "build": "ionic-app-scripts build",
        "build:debug": "ionic cordova build android --debug --minifyjs --minifycss",
        "lint": "ionic-app-scripts lint",
        "ionic:build": "ionic-app-scripts build",
        "ionic:serve": "ionic-app-scripts serve",
        "commit": "git-cz"
    },
    "dependencies": {
        "@angular/common": "^4.4.3",
        "@angular/compiler": "^4.4.3",
        "@angular/compiler-cli": "^4.4.3",
        "@angular/core": "^4.4.3",
        "@angular/forms": "^4.4.3",
        "@angular/platform-browser": "^4.4.3",
        "@angular/platform-browser-dynamic": "^4.4.3",
        "@ionic-native/core": "4.3.0",
        "@ionic-native/splash-screen": "4.3.0",
        "@ionic-native/status-bar": "4.3.0",
        "@ionic/storage": "2.0.1",
        "@ngx-translate/core": "^8.0.0",
        "@ngx-translate/http-loader": "^2.0.0",
        "cordova-android": "^6.2.3",
        "cordova-plugin-console": "^1.0.7",
        "cordova-plugin-device": "^1.1.6",
        "cordova-plugin-splashscreen": "^4.0.3",
        "cordova-plugin-statusbar": "^2.2.3",
        "cordova-plugin-whitelist": "^1.3.2",
        "ionic-angular": "^3.7.1",
        "ionic-plugin-keyboard": "^2.2.1",
        "ionicons": "3.0.0",
        "rxjs": "^5.4.3",
        "sw-toolbox": "3.6.0",
        "zone.js": "^0.8.18"
    },
    "devDependencies": {
        "@ionic/app-scripts": "3.0.0",
        "commitizen": "^2.9.6",
        "cz-conventional-changelog": "^2.0.0",
        "cz-emoji": "^0.2.0",
        "ionic": "3.12.0",
        "typescript": "^2.5.3"
    },
    "description": "An Ionic project. Random generator for non playing characters in rolling games.",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-emoji"
        },
        "cz-emoji": {
            "scopes": [
                "character-generator",
                "ci",
                "other"
            ],
            "types": [
                {
                    "name": "feat \t\t A new feature",
                    "value": ":gift:"
                },
                {
                    "name": "fix \t\t Fixing a bug",
                    "value": ":bug:"
                },
                {
                    "name": "style \t Visual changes",
                    "value": ":lipstick:"
                },
                {
                    "name": "docs \t\t Changing documentation",
                    "value": ":memo:"
                },
                {
                    "name": "refactor \t Refactoring code",
                    "value": ":wrench:"
                },
                {
                    "name": "upgrade \t Upgrading dependancies",
                    "value": ":thumbsup:"
                },
                {
                    "name": "downgrade \t Downgrading dependancies",
                    "value": ":thumbsup:"
                },
                {
                    "name": "test \t\t Writing/fixing tests",
                    "value": ":tada:"
                },
                {
                    "name": "chore \t Other tasks",
                    "value": ":dancer:"
                }
            ]
        }
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-console": {},
            "cordova-plugin-device": {},
            "cordova-plugin-splashscreen": {},
            "cordova-plugin-statusbar": {},
            "cordova-plugin-whitelist": {},
            "ionic-plugin-keyboard": {}
        },
        "platforms": [
            "android"
        ]
    }
}